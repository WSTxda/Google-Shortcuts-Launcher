<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Base" parent="@style/Theme.Material3.DynamicColors.Dark.NoActionBar">
        <!--components theme-->
        <item name="snackbarStyle">@style/Theme.Component.Material.Snackbar</item>
        <item name="alertDialogTheme">@style/Theme.Component.Material.AlertDialog</item>
        <item name="switchPreferenceCompatStyle">@style/Theme.Component.Material.SwitchPreferenceCompat
        </item>
        <!--fixes some UI issues on MIUI/HyperOS devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <!--app bars colors-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- layout padding -->
        <item name="android:listPreferredItemPaddingLeft">17dp</item>
        <item name="android:listPreferredItemPaddingRight">17dp</item>
        <item name="android:listPreferredItemPaddingStart">17dp</item>
        <item name="android:listPreferredItemPaddingEnd">17dp</item>
        <!--dynamic colors-->
        <item name="isMaterial3DynamicColorApplied">true</item>
    </style>
</resources>